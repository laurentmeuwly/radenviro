{% trans_default_domain 'FOSUserBundle' %}


 
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal">

    <div class="form-group">
        <label for="username" class="col-sm-4 control-label">{{ 'resetting.request.username'|trans }}</label>
        <div class="col-sm-8"><input type="text" class="form-control" id="username" name="username" required="required" /></div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
           <input type="submit" class="btn btn-primary" value="{{ 'resetting.request.submit'|trans }}" />
        </div>
    </div>
                            
</form>

