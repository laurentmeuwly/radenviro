
{% extends 'data_content.html.twig' %}

{% block head_javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
    {% endblock %}
    
{% block content %}

 <div class="row">
                <div id="main" class="col-sm-9">
                
<div class="well">
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

<div class="form-group">
	{{ form_label(form.network, 'search.field.network', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
	<div class="col-sm-6">
        {# Génération de l'input. #}
        {{ form_widget(form.network, {'attr': {'class': 'form-control'}}) }}
      </div>

</div>

<div class="form-group">
	{{ form_label(form.displayList, 'search.field.displaylist', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
	<div class="col-sm-6">
        {# Génération de l'input. #}
        {{ form_widget(form.displayList, {'attr': {'class': 'form-control'}}) }}
      </div>

</div>

<div class="form-group">
	{{ form_label(form.nuclide, 'search.field.nuclide', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
	<div class="col-sm-6">
        {# Génération de l'input. #}
        {{ form_widget(form.nuclide, {'attr': {'class': 'form-control'}}) }}
      </div>
	<div class="col-sm-3 pull-right">
	{{ form_widget(form.search, {'attr': {'class': 'btn btn-primary'}}) }}
	</div>
</div>



{{ form_rest(form) }}
{{ form_end(form) }}
</div>

<div>
{% if datatable %}
    {{ sg_datatables_render(datatable) }}
{% endif %}
</div>

</div>

                
            </div>
{% endblock %}